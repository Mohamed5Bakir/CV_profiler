<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <!-- FAVICON -->
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
    <title>@ViewBag.Title -Profiler</title>
    @Styles.Render("~/Content/UserProfile")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/css")
</head>
<body>
    <nav class="navbar navbar-findcond navbar-default navbar-fixed-top sb-slide" role="navigation">


        @if (User.IsInRole("Administrator"))
        {
        <!-- Left Control -->

            <div class="sb-toggle-left navbar-left">
                <div class="navicon-line"></div>
                <div class="navicon-line"></div>
                <div class="navicon-line"></div>
            </div>
        }
        <div class="container">
            <!-- Menu -->
            <div class="navbar-header">
                <button class="navbar-toggle collapsed" type="button" data-toggle="collapse" data-target=".bs-navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @* <a class="navbar-brand img" href="@Url.Action("Index", "Home")"><img src=" ~/Images/logo-text.png" height="34" /></a>*@
                <a class="navbar-brand" href="@Url.Action("Index", "Home")"> PROFILER </a>
                @* @Html.ActionLink("Application name", "Index", "Home", null, new { @class = "navbar-brand" })*@
            </div>
            <nav class="collapse navbar-collapse bs-navbar-collapse">
                <ul class="nav navbar-nav">
                    <li>
                        <a href="~/Profile/CreateProfile">Créer Un Profil</a>
                    </li>
                    <li>
                        <a href="#">Customize</a>
                    </li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    @Html.Partial("_LoginPartial")

                </ul>
            </nav>
        </div>
    </nav>


    <div id="sb-site">
        <div class="container" id="bodyContainer">
            @RenderBody()

        </div>
        <footer class="footer">
            <p>&copy; @DateTime.Now.Year -Profiler- Made by Mohamed Elhames Bakir </p>
        </footer>
    </div>
    @if (User.IsInRole("Administrator"))
    {
        <!-- /.sb-control-left -->
        <div class="sb-slidebar sb-left sb-width-custom" data-sb-width="150px">
            <div class="sidebar" id="leftMenu">
                <div class=" logo inverse">
                    <img src="~/Images/logo-inverse.png" />
                </div>
                <div class="accordion-heading">
                    <a href="~/Admin/AddGroup">
                        <span class="glyphicon glyphicon-tasks"></span>Group
                    </a>
                </div>
                <div class="accordion-heading">
                    <a href="~/Admin/AddField">
                        <span class="glyphicon glyphicon-calendar"></span>Champs
                    </a>
                </div>
            </div>
        </div>
    }
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/UserProfile")
    <script src="~/Scripts/StarRating.js"></script>
    @RenderSection("scripts", required: false)
    <script>
        (function ($) {
            $(document).ready(function () {
                $.slidebars();
            });
        })(jQuery);
    </script>
</body>
</html>
