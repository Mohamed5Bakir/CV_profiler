@model CProfiles.Web.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<link href="~/Content/countrySelect.css" rel="stylesheet" />
@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Créer un nouveau compte.</h4>
    <hr />
    @Html.ValidationSummary()
    <div class="form-group">
        @Html.LabelFor(m => m.UserName, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
        <div class="col-md-4">
            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
        </div>
        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
        <div class="col-md-4">
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
        </div>
    </div>
    
    <div class="form-group">
        @Html.LabelFor(m => m.LastName, new { @class = "col-md-2 control-label" })
        <div class="col-md-4">
            @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
        </div>
        @Html.LabelFor(m => m.FirstName, new { @class = "col-md-2 control-label" })
        <div class="col-md-4">
            @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">

        @Html.Label("Date de Naissance", new { @class = "col-md-2 control-label" })
        <div class="col-md-3">
            <div class="input-group date">
                <input type="text" class="form-control">
                <span class="input-group-addon input-group-addon-info"><i class="glyphicon glyphicon-inverse glyphicon-calendar"></i></span>
            </div>
        </div>
        @Html.Label("Pays", new { @class = "col-md-1 control-label" })
        <div class="col-md-3">
            <input id="country_selector" type="text" class="form-control country-info" spellcheck="false">
        </div>
        @Html.Label("Sexe", new { @class = "col-md-1 control-label" })
        <div class="col-md-2">
            <div class="btn-group " data-toggle="buttons">
                <label class="btn btn-info col-md-6" id="hommeLabel">
                    <input type="radio" name="Sexe" id="sexeHomme" autocomplete="off">
                    Homme
                </label>
                <label class="btn btn-info col-md-6" id="femmeLabel">
                    <input type="radio" name="Sexe" id="sexeFemme" autocomplete="off">
                    Fremme
                </label>
            </div>
        </div>
    </div>
    
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Confirmer" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/countrySelect.js"></script>
    <script>
        $('#FirstName').keyup(function () {
            var name = $(this).val();
            if (name != null && name != "") {
                $.ajax({
                    url: 'https://api.genderize.io/?name=' + name,
                    dataType: "json"
                }).done(function (data) {
                    var gender = data.gender;
                    if (gender == 'male') {
                        $('#sexeHomme').attr('checked', true);
                        $('#hommeLabel').addClass('active');
                        $('#sexeFemme').removeAttr('checked', false);
                        $('#femmeLabel').removeClass('active');

                    }
                    else if (gender == 'female') {

                        $('#sexeFemme').attr('checked', true);
                        $('#femmeLabel').addClass('active');
                        $('#sexeHomme').removeAttr('checked', false);
                        $('#hommeLabel').removeClass('active');
                    }
                });
            }
        });
        $("#country_selector").countrySelect({
            defaultCountry: "tn",
            //onlyCountries: ['us', 'gb', 'ch', 'ca', 'do'],
            preferredCountries: ['tn']
        });
        $('.input-group.date').datepicker({
            format: "dd/mm/yyyy",
            todayBtn: "linked",
            clearBtn: true,
            language: "fr",
            autoclose: true
        });
    </script>
    @*'https://gender-api.com/get?name='+name+'&country=TN' ,*@
}
